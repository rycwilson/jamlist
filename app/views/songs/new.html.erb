<%= render 'shared/navbar' %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>New Song</title>
  </head>
  <body>
    <div class='container'>

      <%= link_to 'Cancel', songs_path %>
      <h3>New song</h3>
      <hr>
      <%= form_for(@song, url: songs_path, method: :post) do |f| %>
        <%= f.label :artist %>
        <%= f.text_field :artist %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.submit "Add song" %>
      <% end %>

    </div>
  </body>
</html>